<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="EnjoyRatingBar" parent="android:style/Widget.Material.Light.RatingBar.Small">
        <item name="android:progressTint">@color/duskYellow</item>
        <item name="android:progressBackgroundTint">@color/lightGray</item>
    </style>
    <style name="MeaningRatingBar" parent="android:style/Widget.Material.Light.RatingBar.Small">
        <item name="android:progressTint">@color/niceBlue</item>
        <item name="android:progressBackgroundTint">@color/lightGray</item>
    </style>

</resources>
