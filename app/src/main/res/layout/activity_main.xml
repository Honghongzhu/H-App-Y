<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MainActivity">

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="335dp"
        android:layout_height="93dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/search_complete"
        android:onClick="launchSearchActivity"
        android:gravity="top|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonRecommendCS"
        />
    <Button
        android:id="@+id/buttonRecommendCS"
        android:layout_width="335dp"
        android:layout_height="93dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/filter_complete"
        android:textColor="@color/white"
        android:onClick="launchRecommendationCSActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSearch"
        app:layout_constraintBottom_toTopOf="@id/buttonTop10"/>

    <Button
        android:id="@+id/buttonTop10"
        android:layout_width="335dp"
        android:layout_height="93dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/top_complete"
        android:textColor="@color/white"
        android:onClick="launchTop12Activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRecommendCS"
        app:layout_constraintBottom_toTopOf="@id/buttonSaved"/>

    <Button
        android:id="@+id/buttonSaved"
        android:layout_width="335dp"
        android:layout_height="93dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/saved_complete"
        android:textColor="@color/white"
        android:onClick="launchSavedActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonTop10"
        app:layout_constraintBottom_toTopOf="@id/buttonHistory" />

    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="335dp"
        android:layout_height="93dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/history_complete"
        android:textColor="@color/white"
        android:onClick="launchHistoryActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonSaved"
        app:layout_constraintBottom_toBottomOf="parent"/>



</android.support.constraint.ConstraintLayout>