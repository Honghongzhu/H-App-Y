<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorback"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/rank_top12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/moviePhotoName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@id/rank"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top12MoviePhoto"
            android:layout_width="83dp"
            android:layout_height="108dp"
            android:layout_margin="10dp"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rankedMovieName"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/top12MovieName"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/rankedMoviePhoto"
                app:layout_constraintStart_toEndOf="@id/rankedMoviePhoto"
                app:layout_constraintTop_toTopOf="@id/rankedMoviePhoto" />

            <TextView
                android:id="@+id/top12SimilarityScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/similarityGreen"
                app:layout_constraintStart_toStartOf="@id/top12MovieName"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/top12MovieSave"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@drawable/save_button_dark_fixedsize"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:contentDescription="TODO"
            app:layout_constraintStart_toEndOf="@id/moviePhotoName"
            app:layout_constraintEnd_toStartOf="@id/rankedButtonRate"
            app:layout_constraintTop_toTopOf="@id/moviePhotoName"
            app:layout_constraintBottom_toBottomOf="@id/moviePhotoName"/>
        <Button
            android:id="@+id/top12ButtonRate"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/rate_button"
            android:onClick="launchRateActivity"
            app:layout_constraintStart_toEndOf="@id/rankedMovieSave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/moviePhotoName"
            app:layout_constraintBottom_toBottomOf="@id/moviePhotoName"/>
    </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>