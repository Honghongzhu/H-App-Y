<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendationCSActivity">

    <TextView
        android:id="@+id/recommendCSText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="@string/character_strength"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/cs_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/recommendCSText"
        app:layout_constraintBottom_toTopOf="@id/buttonConfirm">

        <GridLayout
            android:id="@+id/cs_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="8">

            <!--<Button
                android:id="@+id/buttonAppreciation"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/movie"/>-->
            <Button
                android:id="@+id/buttonBravery"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bravery"/>
            <Button
                android:id="@+id/buttonCreativity"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/creativity"/>
            <Button
                android:id="@+id/buttonCuriosity"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/curiosity_"/>
            <Button
                android:id="@+id/buttonFairness"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/fairness_"/>
            <Button
                android:id="@+id/buttonForgiveness"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/forgiveness_"/>
            <Button
                android:id="@+id/buttonGratitude"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/movie"/>
            <Button
                android:id="@+id/buttonHonesty"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/honesty"/>
            <Button
                android:id="@+id/buttonHope"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hope"/>
            <Button
                android:id="@+id/buttonHumility"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/humility"/>
            <Button
                android:id="@+id/buttonHumor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/humor"/>
            <Button
                android:id="@+id/buttonJudgement"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/movie"/>
            <Button
                android:id="@+id/buttonKindness"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/kindness"/>
            <Button
                android:id="@+id/buttonLeadership"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/movie"/>
            <Button
                android:id="@+id/buttonLove"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/love"/>
            <Button
                android:id="@+id/buttonLearning"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/movie"/>
            <Button
                android:id="@+id/buttonPerseverance"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/perseverance_"/>
            <Button
                android:id="@+id/buttonPerspective"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/movie"/>
            <Button
                android:id="@+id/buttonPrudence"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/prudence_"/>
            <Button
                android:id="@+id/buttonSelfRegulation"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/self_regulation_"/>
            <Button
                android:id="@+id/buttonSocialIntelligence"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/social_intelligence_"/>
            <Button
                android:id="@+id/buttonSpirituality"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/movie"/>
            <Button
                android:id="@+id/buttonTeamwork"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/movie"/>
            <Button
                android:id="@+id/buttonZest"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/zest_2"/>
        </GridLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="@string/confirm"
        android:onClick="launchRecommendationActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>