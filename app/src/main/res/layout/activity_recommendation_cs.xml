                        android:background="@color/colorback">
                        <Button
                            android:id="@+id/buttonLove"
                            android:layout_width="134.5dp"
                            android:layout_height="130dp"
                            android:background="@drawable/love_dark" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorback">
                        <Button
                            android:id="@+id/buttonLearning"
                            android:layout_width="134.5dp"
                            android:layout_height="130dp"
                            android:background="@drawable/lol_dark" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorback">
                        <Button
                            android:id="@+id/buttonPerseverance"
                            android:layout_width="134.5dp"
                            android:layout_height="130dp"
                            android:background="@drawable/perseverance_dark" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorback">
                        <Button
                            android:id="@+id/buttonPerspective"
                            android:layout_width="134.5dp"
                            android:layout_height="130dp"
                            android:background="@drawable/perspective_dark" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorback">
                        <Button
                            android:id="@+id/buttonPrudence"
                            android:layout_width="134.5dp"
                            android:layout_height="130dp"
                            android:background="@drawable/prudence_dark" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorback">
                        <Button
                            android:id="@+id/buttonSelfRegulation"
                            android:layout_width="134.5dp"
                            android:layout_height="130dp"
                            android:background="@drawable/self_dark" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorback">
                        <Button
                            android:id="@+id/buttonSocialIntelligence"
                            android:layout_width="134.5dp"
                            android:layout_height="130dp"
                            android:background="@drawable/social_dark" />
