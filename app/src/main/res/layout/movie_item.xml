<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorback"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/moviePhotoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/moviePhoto"
            android:layout_width="83dp"
            android:layout_height="108dp"
            android:layout_margin="10dp"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toStartOf="@id/movieName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movieName"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toEndOf="@id/moviePhoto"
            app:layout_constraintTop_toTopOf="@id/moviePhoto"
            app:layout_constraintBottom_toBottomOf="@id/moviePhoto"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/movieSave"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/save_button_dark_fixedsize"
                android:contentDescription="TODO"
                app:layout_constraintBottom_toBottomOf="@id/moviePhotoName"
                app:layout_constraintEnd_toStartOf="@id/buttonRate"
                app:layout_constraintStart_toEndOf="@id/moviePhotoName"
                app:layout_constraintTop_toTopOf="@id/moviePhotoName" />
            <Button
                android:id="@+id/buttonRate"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/rate_button"
                app:layout_constraintStart_toEndOf="@id/rankedMovieSave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/moviePhotoName"
                app:layout_constraintBottom_toBottomOf="@id/moviePhotoName"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>